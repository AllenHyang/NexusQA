generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Project {
  id            String      @id @default(cuid())
  name          String
  description   String?
  coverImage    String?
  repositoryUrl String?
  startDate     DateTime?
  dueDate       DateTime?
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  suites        TestSuite[]
  testCases     TestCase[]
  testPlans     TestPlan[]
  defects       Defect[]
  internalRequirements InternalRequirement[]
  requirementFolders   RequirementFolder[]
  members       ProjectMember[]
}

model TestSuite {
  id        String      @id @default(cuid())
  name      String
  project   Project     @relation(fields: [projectId], references: [id], onDelete: Cascade)
  projectId String
  parentId  String?
  parent    TestSuite?  @relation("SuiteToSuite", fields: [parentId], references: [id])
  children  TestSuite[] @relation("SuiteToSuite")
  testCases TestCase[]
}

model TestCase {
  id              String   @id @default(cuid())
  title           String
  description     String?
  preconditions   String?
  userStory       String?
  requirementId   String?
  tags            String   @default("[]")
  
  status          String   @default("UNTESTED")
  priority        String   @default("P2")
  visualReference String?
  
  authorId        String?
  author          User?    @relation("AuthoredTestCases", fields: [authorId], references: [id])
  assignedToId    String?
  assignedTo      User?    @relation("AssignedTestCases", fields: [assignedToId], references: [id])
  
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  projectId String

  suite     TestSuite? @relation(fields: [suiteId], references: [id])
  suiteId   String?

  steps     TestStep[]
  history   ExecutionRecord[]
  requirements Requirement[]
  internalRequirements InternalRequirement[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  acceptanceCriteria String?
  reviewStatus String? @default("PENDING")
  testRuns     TestRun[]
}

model Requirement {
  id          String   @id @default(cuid())
  externalId  String
  tracker     String
  url         String
  description String?
  
  testCases   TestCase[]
}

model TestStep {
  id        String   @id @default(cuid())
  action    String
  expected  String
  order     Int      @default(0)
  
  testCase   TestCase @relation(fields: [testCaseId], references: [id], onDelete: Cascade)
  testCaseId String
}

model ExecutionRecord {
  id         String   @id @default(cuid())
  date       DateTime @default(now())
  status     String
  executedBy String
  notes      String?
  bugId      String? // Legacy
  env        String?
  evidence   String? // Legacy URL field, replaced by attachments

  testCase   TestCase @relation(fields: [testCaseId], references: [id], onDelete: Cascade)
  testCaseId String

  defects    Defect[] // Implicit Many-to-Many
  attachments Attachment[] // New: File attachments for evidence
}

// Evidence Attachment (F-TE-005)
model Attachment {
  id           String   @id @default(cuid())
  filename     String   // Original filename
  storedName   String   // Unique stored filename (UUID-based)
  mimeType     String   // e.g., "image/png", "video/mp4"
  size         Int      // File size in bytes
  url          String   // Relative URL path to access the file

  // Optional metadata
  description  String?  // User-provided description

  // Relation to ExecutionRecord
  executionId  String
  execution    ExecutionRecord @relation(fields: [executionId], references: [id], onDelete: Cascade)

  // Upload info
  uploadedBy   String   // User ID who uploaded

  createdAt    DateTime @default(now())
}

model Defect {
  id            String          @id @default(cuid())
  title         String
  description   String?
  
  status        String          @default("OPEN") // OPEN, IN_PROGRESS, RESOLVED, CLOSED
  severity      String          @default("MEDIUM")
  
  projectId     String
  project       Project         @relation(fields: [projectId], references: [id], onDelete: Cascade)
  
  authorId      String
  author        User            @relation("AuthoredDefects", fields: [authorId], references: [id]) // Relation to User
  assigneeId    String?
  assignee      User?           @relation("AssignedDefects", fields: [assigneeId], references: [id]) // Relation to User
  
  // External Link (Optional integration)
  externalIssueId String?
  externalUrl     String?
  
  // Many-to-Many relation
  executions    ExecutionRecord[]
  
  comments      DefectComment[] // One-to-many
  
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model DefectComment {
  id        String   @id @default(cuid())
  content   String
  
  defectId  String
  defect    Defect   @relation(fields: [defectId], references: [id], onDelete: Cascade)
  
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model User {
  id              String          @id @default(cuid())
  name            String
  email           String          @unique
  role            String          @default("TESTER") // ADMIN, QA_LEAD, TESTER, PM, DEVELOPER
  avatar          String?
  authoredDefects Defect[]        @relation("AuthoredDefects")
  assignedDefects Defect[]        @relation("AssignedDefects")
  authoredTestCases TestCase[]    @relation("AuthoredTestCases")
  assignedTestCases TestCase[]    @relation("AssignedTestCases")
  comments        DefectComment[]
  authoredRequirements InternalRequirement[] @relation("AuthoredRequirements")
  requirementReviews RequirementReview[]
  projectMemberships ProjectMember[]
}

// Project Member Management (F-PM-006)
model ProjectMember {
  id        String   @id @default(cuid())

  // Relations
  projectId String
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Role: OWNER, ADMIN, MEMBER, VIEWER
  role      String   @default("MEMBER")

  // Invitation info
  invitedBy String?  // Inviter user ID
  invitedAt DateTime @default(now())

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([projectId, userId])
}

model TestPlan {
  id          String    @id @default(cuid())
  name        String
  description String?
  startDate   DateTime?
  endDate     DateTime?
  status      String    @default("PLANNED") // PLANNED, ACTIVE, COMPLETED, ARCHIVED
  
  project     Project   @relation(fields: [projectId], references: [id], onDelete: Cascade)
  projectId   String

  runs        TestRun[]
  
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model TestRun {
  id          String    @id @default(cuid())
  status      String    @default("UNTESTED")
  executedBy  String?
  notes       String?
  executedAt  DateTime?
  snapshot    String?   // JSON string of the test case at the time of add

  testPlan    TestPlan  @relation(fields: [testPlanId], references: [id], onDelete: Cascade)
  testPlanId  String

  testCase    TestCase  @relation(fields: [testCaseId], references: [id], onDelete: Cascade)
  testCaseId  String

  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@unique([testPlanId, testCaseId])
}

// Internal Requirement Management (PRD v2)
model InternalRequirement {
  id                 String    @id @default(cuid())
  title              String
  description        String?   // Supports Markdown

  // Folder Hierarchy (F-RQ-011, F-RQ-012)
  folderId           String?   // Parent folder ID
  folder             RequirementFolder? @relation(fields: [folderId], references: [id])
  order              Int       @default(0) // Order within folder

  // User Stories (JSON array, BDD format: As a..., I want..., So that...)
  // Structure: [{ id, role, goal, benefit }]
  userStories        String    @default("[]")

  // Target Users/Personas (JSON array of role codes)
  // e.g., ["PM", "TESTER", "DEVELOPER"]
  targetUsers        String    @default("[]")

  // Preconditions (requirements that must be met before this feature)
  preconditions      String?   // Supports Markdown

  // Business Rules (JSON array)
  // Structure: [{ id, code, description }]
  businessRules      String    @default("[]")

  // Design/Prototype References (JSON array)
  // Structure: [{ id, type: 'image'|'link'|'figma', url, title }]
  designReferences   String    @default("[]")

  // Version/Sprint Planning
  targetVersion      String?   // e.g., "v1.0.0", "Sprint 23"
  estimatedEffort    String?   // e.g., "3d", "5 story points"

  // Owner/Assignee
  ownerId            String?   // Product owner responsible for this requirement

  // Related Requirements (JSON array of requirement IDs)
  // Structure: [{ id, type: 'depends_on'|'blocks'|'related_to' }]
  relatedRequirements String   @default("[]")

  // Status Management
  status             String    @default("DRAFT") // DRAFT, PENDING_REVIEW, APPROVED, IN_PROGRESS, COMPLETED
  acceptanceStatus   String    @default("PENDING") // PENDING, ACCEPTED, REJECTED

  priority           String    @default("P2") // P0, P1, P2, P3
  tags               String    @default("[]") // JSON array of tags

  // Acceptance Criteria (JSON array)
  // Structure: [{ id, description, testCaseIds[], status }]
  acceptanceCriteria String    @default("[]")

  // Acceptance Records
  acceptedBy         String?
  acceptedAt         DateTime?
  acceptanceNotes    String?

  // Review Records
  reviewerId         String?   // Assigned reviewer
  reviewedAt         DateTime?
  reviewNotes        String?   // Latest review notes

  // Relations
  projectId          String
  project            Project   @relation(fields: [projectId], references: [id], onDelete: Cascade)

  authorId           String
  author             User      @relation("AuthoredRequirements", fields: [authorId], references: [id])

  // Many-to-Many with TestCase (implicit)
  testCases          TestCase[]

  // Review History
  reviews            RequirementReview[]

  createdAt          DateTime  @default(now())
  updatedAt          DateTime  @updatedAt
}

// Requirement Review History
model RequirementReview {
  id              String    @id @default(cuid())

  action          String    // SUBMIT, APPROVE, REJECT, REQUEST_CHANGES
  comment         String?   // Review comment/feedback

  // Previous and new status for tracking
  fromStatus      String?
  toStatus        String

  requirementId   String
  requirement     InternalRequirement @relation(fields: [requirementId], references: [id], onDelete: Cascade)

  reviewerId      String
  reviewer        User      @relation(fields: [reviewerId], references: [id])

  createdAt       DateTime  @default(now())
}

// Requirement Folder Hierarchy (F-RQ-011, F-RQ-012)
// Supports Epic -> Feature -> Requirement structure
model RequirementFolder {
  id              String    @id @default(cuid())
  name            String
  description     String?

  // Folder type: EPIC, FEATURE, or FOLDER (generic)
  type            String    @default("FOLDER") // EPIC, FEATURE, FOLDER

  // Self-referential hierarchy (supports unlimited nesting)
  parentId        String?
  parent          RequirementFolder?  @relation("FolderHierarchy", fields: [parentId], references: [id])
  children        RequirementFolder[] @relation("FolderHierarchy")

  // Ordering within parent
  order           Int       @default(0)

  // Project association
  projectId       String
  project         Project   @relation(fields: [projectId], references: [id], onDelete: Cascade)

  // Requirements in this folder
  requirements    InternalRequirement[]

  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
}
