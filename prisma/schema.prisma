generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Project {
  id            String      @id @default(cuid())
  name          String
  description   String?
  coverImage    String?
  repositoryUrl String?
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  suites        TestSuite[]
  testCases     TestCase[]
}

model TestSuite {
  id        String      @id @default(cuid())
  name      String
  project   Project     @relation(fields: [projectId], references: [id], onDelete: Cascade)
  projectId String
  parentId  String?
  parent    TestSuite?  @relation("SuiteToSuite", fields: [parentId], references: [id])
  children  TestSuite[] @relation("SuiteToSuite")
  testCases TestCase[]
}

model TestCase {
  id              String   @id @default(cuid())
  title           String
  description     String?
  preconditions   String?
  userStory       String?
  requirementId   String?
  tags            String   @default("[]")
  
  status          String   @default("UNTESTED")
  priority        String   @default("P2")
  visualReference String?
  
  authorId        String?
  assignedToId    String?
  
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  projectId String

  suite     TestSuite? @relation(fields: [suiteId], references: [id])
  suiteId   String?

  steps     TestStep[]
  history   ExecutionRecord[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model TestStep {
  id        String   @id @default(cuid())
  action    String
  expected  String
  order     Int      @default(0)
  
  testCase   TestCase @relation(fields: [testCaseId], references: [id], onDelete: Cascade)
  testCaseId String
}

model ExecutionRecord {
  id         String   @id @default(cuid())
  date       DateTime @default(now())
  status     String
  executedBy String
  notes      String?
  bugId      String?
  env        String?
  evidence   String?
  
  testCase   TestCase @relation(fields: [testCaseId], references: [id], onDelete: Cascade)
  testCaseId String
}
