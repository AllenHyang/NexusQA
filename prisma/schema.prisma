generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Project {
  id            String      @id @default(cuid())
  name          String
  description   String?
  coverImage    String?
  repositoryUrl String?
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  suites        TestSuite[]
  testCases     TestCase[]
  testPlans     TestPlan[]
  defects       Defect[]
}

model TestSuite {
  id        String      @id @default(cuid())
  name      String
  project   Project     @relation(fields: [projectId], references: [id], onDelete: Cascade)
  projectId String
  parentId  String?
  parent    TestSuite?  @relation("SuiteToSuite", fields: [parentId], references: [id])
  children  TestSuite[] @relation("SuiteToSuite")
  testCases TestCase[]
}

model TestCase {
  id              String   @id @default(cuid())
  title           String
  description     String?
  preconditions   String?
  userStory       String?
  requirementId   String?
  tags            String   @default("[]")
  
  status          String   @default("UNTESTED")
  priority        String   @default("P2")
  visualReference String?
  
  authorId        String?
  assignedToId    String?
  
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  projectId String

  suite     TestSuite? @relation(fields: [suiteId], references: [id])
  suiteId   String?

  steps     TestStep[]
  history   ExecutionRecord[]
  requirements Requirement[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  acceptanceCriteria String?
  reviewStatus String? @default("PENDING")
  testRuns     TestRun[]
}

model Requirement {
  id          String   @id @default(cuid())
  externalId  String
  tracker     String
  url         String
  description String?
  
  testCases   TestCase[]
}

model TestStep {
  id        String   @id @default(cuid())
  action    String
  expected  String
  order     Int      @default(0)
  
  testCase   TestCase @relation(fields: [testCaseId], references: [id], onDelete: Cascade)
  testCaseId String
}

model ExecutionRecord {
  id         String   @id @default(cuid())
  date       DateTime @default(now())
  status     String
  executedBy String
  notes      String?
  bugId      String? // Legacy
  env        String?
  evidence   String?
  
  testCase   TestCase @relation(fields: [testCaseId], references: [id], onDelete: Cascade)
  testCaseId String
  
  defects    Defect[] // Implicit Many-to-Many
}

model Defect {
  id            String          @id @default(cuid())
  title         String
  description   String?
  
  status        String          @default("OPEN") // OPEN, IN_PROGRESS, RESOLVED, CLOSED
  severity      String          @default("MEDIUM")
  
  projectId     String
  project       Project         @relation(fields: [projectId], references: [id], onDelete: Cascade)
  
  authorId      String
  assigneeId    String?
  
  // External Link (Optional integration)
  externalIssueId String?
  externalUrl     String?
  
  // Many-to-Many relation
  executions    ExecutionRecord[]
  
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model TestPlan {
  id          String    @id @default(cuid())
  name        String
  description String?
  startDate   DateTime?
  endDate     DateTime?
  status      String    @default("PLANNED") // PLANNED, ACTIVE, COMPLETED, ARCHIVED
  
  project     Project   @relation(fields: [projectId], references: [id], onDelete: Cascade)
  projectId   String

  runs        TestRun[]
  
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model TestRun {
  id          String    @id @default(cuid())
  status      String    @default("UNTESTED")
  executedBy  String?
  notes       String?
  executedAt  DateTime?
  snapshot    String?   // JSON string of the test case at the time of add

  testPlan    TestPlan  @relation(fields: [testPlanId], references: [id], onDelete: Cascade)
  testPlanId  String

  testCase    TestCase  @relation(fields: [testCaseId], references: [id], onDelete: Cascade)
  testCaseId  String

  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@unique([testPlanId, testCaseId])
}
